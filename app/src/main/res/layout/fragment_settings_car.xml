<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutSettingsCar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsCarFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/textViewCurbWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/textview_settings_curb_weight"
            android:textSize="24sp" />

        <SeekBar
            android:id="@+id/seekBarCurbWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/textview_settings_curb_weight" />

        <TextView
            android:id="@+id/textViewTireDiameter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/textview_settings_tire_diameter"
            android:textSize="24sp" />

        <SeekBar
            android:id="@+id/seekBarTireDiameter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/textview_settings_tire_diameter" />

        <TextView
            android:id="@+id/textViewDragCoefficient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/textview_settings_drag_coefficient"
            android:textSize="24sp" />

        <SeekBar
            android:id="@+id/seekBarDragCoefficient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/textview_settings_drag_coefficient" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewGear1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/textview_settings_gear_1"
                android:textSize="28sp" />

            <EditText
                android:id="@+id/editTextGear1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:text=""
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewGear2"
