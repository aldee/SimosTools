<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_settings_pid"
    android:layout_width="match_parent"
    android:layout_height="508dp"
    android:baselineAligned="false"
    android:orientation="vertical">

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.app.simostools.SwitchButton
                android:id="@+id/buttonUp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/textview_settings_pid_up"
                android:textSize="28sp" />

            <com.app.simostools.SwitchButton
                android:id="@+id/buttonDown"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/textview_settings_pid_down"
                android:textSize="28sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewName"
                        android:layout_width="112dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp"
                        android:text="@string/textview_settings_pid_name"
                        android:textSize="28sp" />

                    <EditText
                        android:id="@+id/editTextName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        android:text="" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="225dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewUnit"
                        android:layout_width="112dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp"
                        android:text="@string/textview_settings_pid_unit"
                        android:textSize="28sp" />

                    <EditText
                        android:id="@+id/editTextUnit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        android:text="" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewAddress"
                        android:layout_width="128dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:text="@string/textview_settings_pid_address"
                        android:textSize="28sp" />

                    <EditText
                        android:id="@+id/editTextAddress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        android:text="" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="225dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewLength"
                        android:layout_width="112dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:text="@string/textview_settings_pid_length"
                        android:textSize="28sp" />

                    <EditText
                        android:id="@+id/editTextLength"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        android:text="" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewGaugeMin"
                        android:layout_width="112dp"
                        android:layout_height="match_parent"
                        android:text="@string/textview_settings_pid_gauge_min"
                        android:textSize="28sp" />

                    <EditText
                        android:id="@+id/editTextGaugeMin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        android:text="" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewGaugeMax"
                        android:layout_width="112dp"
                        android:layout_height="match_parent"
                        android:text="@string/textview_settings_pid_gauge_max"
                        android:textSize="28sp" />

                    <EditText
                        android:id="@+id/editTextGaugeMax"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        android:text="" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewWarnMin"
                        android:layout_width="112dp"
                        android:layout_height="match_parent"
                        android:text="@string/textview_settings_pid_warn_min"
                        android:textSize="28sp" />

                    <EditText
                        android:id="@+id/editTextWarnMin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        android:text="" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewWarnMax"
                        android:layout_width="112dp"
                        android:layout_height="match_parent"
                        android:text="@string/textview_settings_pid_warn_max"
                        android:textSize="28sp" />

                    <EditText
                        android:id="@+id/editTextWarnMax"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        android:text="" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewEquation"
                        android:layout_width="148dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp"
                        android:text="@string/textview_settings_pid_equation"
                        android:textSize="28sp" />

                    <EditText
                        android:id="@+id/editTextEquation"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        android:text="" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewFormat"
                        android:layout_width="112dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp"
                        android:text="@string/textview_settings_pid_format"
                        android:textSize="28sp" />

                    <EditText
                        android:id="@+id/editTextFormat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        android:text="" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewSmoothing"
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp"
                        android:text="@string/textview_settings_pid_smoothing"
                        android:textSize="28sp" />

                    <EditText
                        android:id="@+id/editTextSmoothing"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        android:text="" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewAssignTo"
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp"
                        android:text="@string/textview_settings_pid_assign_to"
                        android:textSize="28sp" />

                    <EditText
                        android:id="@+id/editTextAssignTo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        android:text="" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchEnable"
                    android:layout_width="400dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/textview_settings_pid_enabled"
                    android:textSize="28sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewTabs"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp"
                        android:text="@string/textview_settings_pid_tabs"
                        android:textSize="28sp" />

                    <EditText
                        android:id="@+id/editTextTabs"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        android:text="" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
